<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page4"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/back_button_page4"
                android:layout_width="37dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/arrow_back_page3"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socially"
                android:textColor="@color/page4_socially_color"
                android:textSize="50dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Username field -->
            <EditText
                android:id="@+id/login_username"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter Username"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Password field -->
            <EditText
                android:id="@+id/login_password"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/page4_passoward_color"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_marginRight="40dp"
                android:textSize="20dp"
                android:layout_below="@+id/login_password"
                android:layout_alignParentRight="true"
                android:textColor="@color/page3_socially_color" />

            <Button
                android:id="@+id/page4_login"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/page4_login_button_color"
                android:text="Log in"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_below="@+id/forgot_password"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0.7"
        >

        <!-- Left line -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC"

            />

        <!-- OR text -->
        <TextView
            android:id="@+id/or_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#999999"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textStyle="bold"
            />

        <!-- Right line -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#CCCCCC" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/page4_account_verification_statment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textSize="19dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/page4_passoward_color"
                />
            <TextView
                android:id="@+id/page4_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup."
                android:textColor="@color/page3_socially_color"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/page4_account_verification_statment"
                android:clickable="true"
                android:focusable="true"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socially"
                android:textColor="@color/page4_socially_color"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>